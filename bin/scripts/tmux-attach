#!/usr/bin/env bash

# Using fzf to attach to existing sessions
session=$(tmux ls \
    | awk '{print $1}' \
    | sed 's/://' \
    | fzf --header "CHOOSE SESSION" --layout=reverse)

if [ "$?" = 0 ]; then
    tmux attach -t "$session"
fi

